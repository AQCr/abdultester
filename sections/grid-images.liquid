<div class="section-{{ section.id }}">
    <div class="container">
        {% if section.settings.heading != blank %}
            <h2 class="section-heading">{{ section.settings.heading }}</h2>
        {% endif %}
        
        {% if section.settings.description != blank %}
            <div class="section-description">{{ section.settings.description }}</div>
        {% endif %}

        <div class="image-grid" id="imageGrid">
            {% for block in section.blocks limit: 20 %}
                <div class="grid-item {% if forloop.index > 4 %}hidden{% endif %}" {{ block.shopify_attributes }}>
                    {% if block.settings.image != blank %}
                        <img src="{{ block.settings.image | img_url: 'master' }}" 
                                 alt="{{ block.settings.image.alt | escape }}"
                                 loading="lazy"
                                 width="{{ block.settings.image.width }}"
                                 height="{{ block.settings.image.height }}">
                    {% else %}
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                </div>
            {% endfor %}
        </div>

        {% if section.blocks.size > 4 %}
            <div class="load-more-container">
                <button class="load-more-button" id="loadMore">Load More</button>
            </div>
        {% endif %}
    </div>
</div>

<style>
    .section-{{ section.id }} {
        padding: 60px 0;
    }
    
    .section-heading {
        text-align: center;
        margin-bottom: 20px;
    }

    .section-description {
        text-align: center;
        margin-bottom: 40px;
    }

    .image-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin-bottom: 30px;
    }

    .grid-item img {
        width: 100%;
        height: auto;
        display: block;
    }

    .hidden {
        display: none;
    }

    .load-more-container {
        text-align: center;
    }

    .load-more-button {
        padding: 10px 30px;
        background: {{ section.settings.button_color }};
        color: white;
        border: none;
        cursor: pointer;
        border-radius: 4px;
    }

    @media screen and (max-width: 768px) {
        .image-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const loadMoreBtn = document.getElementById('loadMore');
        const items = document.querySelectorAll('.grid-item.hidden');
        let currentItems = 4;

        if (loadMoreBtn) {
            loadMoreBtn.addEventListener('click', function() {
                for (let i = currentItems; i < currentItems + 4; i++) {
                    if (items[i - 4]) {
                        items[i - 4].classList.remove('hidden');
                    }
                }
                currentItems += 4;

                if (currentItems >= items.length + 4) {
                    loadMoreBtn.style.display = 'none';
                }
            });
        }
    });
</script>

{% schema %}
{
    "name": "Grid Images",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Image Gallery"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>Add your gallery description here</p>"
        },
        {
            "type": "color",
            "id": "button_color",
            "label": "Button Color",
            "default": "#000000"
        }
    ],
    "blocks": [
        {
            "type": "image",
            "name": "Image",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Grid Images",
            "blocks": [
                {
                    "type": "image"
                },
                {
                    "type": "image"
                },
                {
                    "type": "image"
                },
                {
                    "type": "image"
                }
            ]
        }
    ]
}
{% endschema %}